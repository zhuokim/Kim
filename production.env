# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT 配置
JWT_SECRET=please_change_this_to_a_secure_secret_key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# 服务器配置
HOST=0.0.0.0
PORT=5050
WORKERS=4
LOG_LEVEL=info

# 安全配置
ALLOWED_ORIGINS=https://your_domain.com
CORS_ALLOW_CREDENTIALS=true
SSL_KEYFILE=/path/to/ssl/private.key
SSL_CERTFILE=/path/to/ssl/certificate.crt

# 应用配置
DEBUG=false
ENVIRONMENT=production 